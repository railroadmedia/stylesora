{
  "name": "stylesora",
  "version": "1.0.20",
  "description": "A CSS package for styling Musora's websites and web applications with ease. Includes Tailwind CSS as well as custom patterns for rapid prototyping and development.",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "style": "dist/stylesora.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/railroadmedia/stylesora"
  },
  "homepage": "https://github.com/railroadmedia/stylesora/blob/main/README.md",
  "scripts": {
    "build:js": "./node_modules/.bin/webpack --mode production",
    "build:css": "cross-env NODE_ENV=production postcss src/styles/tailwind.css -o dist/stylesora.css",
    "build:dev": "postcss src/styles/tailwind.css -o dist/stylesora.css",
    "lib:watch": "nodemon -w tailwind.config.js -w src/styles -w js -e css,js -x npm run build:dev",
    "lib:build": "run-p build:js build:css"
  },
  "author": "Miguel Fondeur",
  "license": "MIT",
  "devDependencies": {
    "alpinejs": "^2.8.0",
    "autoprefixer": "^10.2.3",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-import": "^14.0.0",
    "postcss-nested": "^5.0.3",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2",
    "uglify-js": "^3.13.1",
    "vuepress": "^1.8.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-merge-and-include-globally": "^2.3.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
